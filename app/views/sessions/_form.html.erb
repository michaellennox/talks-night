<%= bulma_form_with model: session_form, id: "session-form" do |f| %>
  <div class="field">
    <%= f.label :email, "Email", class: "label" %>
    <div class="control">
      <%= f.text_field :email, class: "input" %>
    </div>
    <%= f.errors :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Password", class: "label" %>
    <div class="control">
      <%= f.password_field :password, class: "input", value: session_form.password %>
    </div>
    <%= f.errors :password %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Log in", class: "button is-primary" %>
    </div>
  </div>
<% end %>
