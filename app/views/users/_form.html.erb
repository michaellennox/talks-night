<%= bulma_form_with model: user, id: "user-form" do |f| %>
  <div class="field">
    <%= f.label :display_name, "Display Name", class: "label" %>
    <div class="control">
      <%= f.text_field :display_name, class: "input" %>
    </div>
    <%= f.errors :display_name %>
  </div>

  <div class="field">
    <%= f.label :email, "Email", class: "label" %>
    <div class="control">
      <%= f.text_field :email, class: "input" %>
    </div>
    <%= f.errors :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Password", class: "label" %>
    <div class="control">
      <%= f.password_field :password, class: "input", value: user.password %>
    </div>
    <%= f.errors :password %>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit class: "button is-primary" %>
    </div>
  </div>
<% end %>
